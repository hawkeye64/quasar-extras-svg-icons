{
  "type": "component",
  "meta": {
    "docsUrl": "https://path-to-your-docs/markdown-code-prism"
  },
  "props": {
    "code": {
      "type": "String",
      "desc": "The code to display with syntax highlighting",
      "examples": [
        "'const a = 1;'",
        "'<div>Hello World</div>'"
      ],
      "required": true,
      "category": "content"
    },
    "lang": {
      "type": "String",
      "desc": "Language of the code for syntax highlighting",
      "examples": [
        "'js'",
        "'html'",
        "'css'"
      ],
      "required": true,
      "category": "content"
    }
  }
}